@model IEnumerable<MLBPickem.Models.Game>
@{
    ViewData["Title"] = "Index";
}


<h1>Upcoming Games:</h1>

<table class="table">
    <tbody>
        @foreach (var game in Model)
        {
            <tr>
                <table class="table table-striped table-dark table-sm table-responsive-sm table-hover w-100" style="min-width:380px; max-width:690px;">
                    <tr>
                        @game.FirstPitchDateTime.ToString("h:mm") ET @game.FirstPitchDateTime.ToString("M/dd")
                    </tr>
                    <tr style="max-height:20px;">
                        <td style="width: 20%;  position:relative;">
                            <img style="max-height:20px;" src="~/images/@game.AwayTeam.ImagePath" />
                        </td>
                        <td style="width: 20%">
                            @game.AwayTeam.MLBName
                        </td>
                        <td style="width: 10%">
                            @game.AwayLine
                        </td>
                        <td style="width: 45%">
                            @game.AwayStartingPitcher
                        </td>
                        <td style="width: 5%">
                            <input type="checkbox" value="@game.MLBScoreBoardId-@game.AwayTeam.TeamId" />
                        </td>
                    </tr>
                    <tr>
                        <td style="width: 20%;  position:relative;">
                            <div style="width:100%; display:flex; justify-content:center;">
                                <div style="position:absolute; left:3px;">@("@")</div>
                                <img style="max-height:20px;" src="~/images/@game.HomeTeam.ImagePath" />
                            </div>
                        </td>
                        <td style="width: 20%">
                            @game.HomeTeam.MLBName
                        </td>
                        <td style="width: 10%">
                            @game.HomeLine
                        </td>
                        <td style="width: 45%">
                            @game.HomeStartingPitcher
                        </td>
                        <td style="width: 5%">
                            <input type="checkbox" value="@game.MLBScoreBoardId-@game.HomeTeam.TeamId" />
                        </td>
                    </tr>
                </table>
            </tr>
            <hr />
        }
    </tbody>
</table>




